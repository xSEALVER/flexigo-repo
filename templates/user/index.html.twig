{% extends 'base.html.twig' %}

{% block title %}User Index{% endblock %}

{% block body %}
{# NAVBAR-CRUD #}
<nav class="dark:bg-gray-900 shadow-md">
    <div class="container mx-auto px-12 flex justify-between items-center h-16">
        <!-- Logo Section -->
        <a href="/" class="text-3xl font-bold text-blue-600">
            Flexigo
        </a>

        <!-- Buttons Section -->
        <div class="space-x-4 flex items-center">
            <!-- Reservations Link -->
            <a href="{{ path('app_cinema_index') }}" class="px-4 py-2 text-white hover:underline">
                Cinemas
            </a>

            <a href="{{ path('app_film_index') }}" class="px-4 py-2 text-white hover:underline">
                Films
            </a>

            <a href="{{ path('app_reservation_index') }}" class="px-4 py-2 text-white hover:underline">
                Reservations
            </a>

             

            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <!-- Logout Button -->
                <form method="POST" action="{{ path('app_logout') }}" class="inline">
                    <button 
                        type="submit" 
                        class="px-4 py-2 border border-red-600 text-red-600 rounded hover:bg-red-600 hover:text-white transition duration-300">
                        Log Out
                    </button>
                </form>
            {% else %}
                <!-- Log In and Sign In Buttons -->
                <a href="{{ path('app_login') }}" class="px-4 py-2 border border-blue-600 text-blue-600 rounded hover:bg-blue-600 hover:text-white transition duration-300">
                    Log In
                </a>
                <a href="{{ path('app_register') }}" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 transition duration-300">
                    Sign In
                </a>
            {% endif %}
        </div>
    </div>
</nav>
{# NAVBAR-CRUD #}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-semibold mb-6">User Index</h1>

        <div class="bg-white p-6 shadow-md rounded-lg mb-6">
            <table class="min-w-full table-auto border-collapse border border-gray-300">
                <thead>
                    <tr class="bg-gray-100">
                        <th class="border py-2 px-4 text-left font-medium">Id</th>
                        <th class="border py-2 px-4 text-left font-medium">Email</th>
                        <th class="border py-2 px-4 text-left font-medium">Roles</th>
                        <th class="border py-2 px-4 text-left font-medium">Password</th>
                        <th class="border py-2 px-4 text-left font-medium">Telephone</th>
                        <th class="border py-2 px-4 text-left font-medium">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in users %}
                        <tr class="border-b hover:bg-gray-50">
                            <td class="border py-2 px-4">{{ user.id }}</td>
                            <td class="border py-2 px-4">{{ user.email }}</td>
                            <td class="border py-2 px-4">{{ user.roles ? user.roles|join(', ') : 'No roles assigned' }}</td>
                            <td class="border py-2 px-4">{{ user.password }}</td>
                            <td class="border py-2 px-4">{{ user.telephone }}</td>
                            <td class="border py-2 px-4">
                                <a href="{{ path('app_user_show', {'id': user.id}) }}" class="text-blue-600 hover:text-blue-800">Show</a>
                                <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="ml-4 text-blue-600 hover:text-blue-800">Edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6" class="py-2 px-4 text-center text-gray-500">No records found</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="mt-6">
            <a href="{{ path('app_user_new') }}" class="inline-block bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700 transition duration-300">
                Create New
            </a>
        </div>
    </div>
{% endblock %}
