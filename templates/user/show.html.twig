{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-semibold mb-6">User Details</h1>

        <div class="bg-white p-6 shadow-md rounded-lg mb-6">
            <table class="min-w-full table-auto">
                <tbody>
                    <tr class="border-b">
                        <th class="py-2 px-4 text-left font-medium">Id</th>
                        <td class="py-2 px-4">{{ user.id }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="py-2 px-4 text-left font-medium">Email</th>
                        <td class="py-2 px-4">{{ user.email }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="py-2 px-4 text-left font-medium">Roles</th>
                        <td class="py-2 px-4">{{ user.roles ? user.roles|json_encode : '' }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="py-2 px-4 text-left font-medium">Password</th>
                        <td class="py-2 px-4">{{ user.password }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="py-2 px-4 text-left font-medium">Telephone</th>
                        <td class="py-2 px-4">{{ user.telephone }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="flex space-x-4">
            <a href="{{ path('app_user_index') }}" class="inline-block text-blue-600 hover:text-blue-800">Back to list</a>

            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="inline-block text-blue-600 hover:text-blue-800">Edit</a>
        </div>

        <div class="mt-6">
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
