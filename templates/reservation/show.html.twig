{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-semibold mb-6">Reservation Details</h1>

        <div class="bg-white p-6 shadow-md rounded-lg mb-6">
            <table class="min-w-full table-auto">
                <tbody>
                    <tr class="border-b">
                        <th class="py-2 px-4 text-left font-medium">Id</th>
                        <td class="py-2 px-4">{{ reservation.id }}</td>
                    </tr>
                    <tr class="border-b">
                        <th class="py-2 px-4 text-left font-medium">Date Reservation</th>
                        <td class="py-2 px-4">{{ reservation.dateReservation ? reservation.dateReservation|date('Y-m-d H:i:s') : '' }}</td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="mt-4 flex justify-between">
            <a href="{{ path('app_reservation_index') }}" class="inline-block bg-gray-600 text-white px-4 py-2 rounded hover:bg-gray-700 transition duration-300">Back to list</a>
            <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}" class="inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition duration-300">Edit</a>
        </div>

        <div class="mt-6">
            {{ include('reservation/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
